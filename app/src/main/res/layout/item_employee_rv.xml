<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_employ_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/medium_dimen"
            android:paddingStart="@dimen/medium_dimen"
            android:paddingTop="@dimen/normal_dimen"
            android:text="employee id" />

        <TextView
            android:id="@+id/tv_employ_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/medium_dimen"
            android:paddingStart="@dimen/medium_dimen"
            android:paddingTop="@dimen/normal_dimen"
            android:paddingBottom="@dimen/normal_dimen"
            android:text="employee name" />
    </LinearLayout>


    <CheckBox
        android:id="@+id/cbx_employ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="@dimen/medium_dimen"
        android:gravity="center" />


</LinearLayout>
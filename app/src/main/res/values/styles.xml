<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- project  theme. -->
    <style name="ProjectTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green2</item>
        <item name="colorPrimaryDark">@color/green1</item>
        <item name="colorAccent">@color/blue2</item>
    </style>

    <!-- task  theme. -->
    <style name="TaskTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue0</item>
        <item name="colorPrimaryDark">@color/blue1</item>
        <item name="colorAccent">@color/blue2</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--Full screen dialog fragment style-->
    <style name="DialogStyle">
        <!--width-->
        <item name="android:layout_width">match_parent</item>
        <!--height-->
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:background">@color/green1</item>
    </style>


    <style name="EditModeTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/normal_dimen</item>
        <item name="android:layout_marginTop">@dimen/normal_dimen</item>
        <item name="android:layout_marginStart">@dimen/medium_dimen</item>
        <item name="android:layout_marginEnd">@dimen/medium_dimen</item>
        <item name="android:background">@drawable/selector_bg_enable</item>
        <item name="android:textColor">@drawable/selector_enable</item>
    </style>

</resources>
